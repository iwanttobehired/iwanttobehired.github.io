.navbar
	display flex

	+below(xs)
		flex-direction column
		position absolute
		width 100%
		top $header-height + $space-md
		left 0
		background #fff
		padding $space 0
		box-shadow 0 2px 5px 0 rgba($secondary-color,0.16), 0 6px 8px 0 rgba($secondary-color,0.22)
		transform translateX(-100%)
		transition transform .5s
		z-index 9
		
	// Navbar item
	&__link
		font(text-small, primary, bold, uppercase)
		position relative
		color #000
		text-decoration none
		+above(xs)
			margin-left $space
		+below(xs)
			font-size 2rem
			padding $space
		
		&:after
			content ' '
			width 100%
			height 2px
			position absolute
			bottom - $space-xs
			left 0
			background-color $secondary-color
			transform scale3d(0, 1, 1)
			transition ease-out .3s
			will-change transform
		
		// Hover
		&:hover:after
			transform scale3d(1, 1, 1)
