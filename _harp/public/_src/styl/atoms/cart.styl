.cart
	margin-left	auto
	position relative

	&:after 
		font(text-small, primary, bold, ' ')
		background-color $primary-color
		border-radius 50%
		content attr(data-number)
		color #fff
		display inline-block
		height 20px
		width 20px
		line-height 20px
		text-align center
		position absolute
		right 19px
		bottom 20px
		opacity 0
	
	&.showNumber:after
		opacity 1