/* -------------------------------------
 * Carousel
 * ---------------------------------- */
[data-carousel='carousel']
  overflow-x hidden


  // Pagination --------------------------
  .rv-pagination
    margin-top 3rem
    text-align center
    
    // Pag. item
    .rv-pagination__item
      background-color #d1d1d1
      border-radius 50%
      border-width 0
      cursor pointer
      padding 0
      margin-left .5rem
      margin-right .5rem
      transition box-shadow .3s
      height 1.5rem
      width 1.5rem

      &:hover
      &:focus
      &.active
        box-shadow inset 0 0 0 10px $primary-color


// Carousel List
[data-carousel='list']
  transition transform ease-in-out .5s
  white-space nowrap


