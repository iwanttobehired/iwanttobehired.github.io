//- Best Sellers
//---------------------------------------
section.container.carousel__section#bestSellers(data-carousel='carousel')

  header
    h2.carousel__title 
      | Mais vendidos
      
  div.product
    div(data-carousel='list')
      
      for product in public.products._data.bestsellers
        section.rv-carousel__item.product__item(data-product-type=(product['hightop'] == true ? 'hightop' : 'lowTop'), data-product-category=product['category'] data-carousel='item')
          img.product__photo(src="#{ product.image }" alt="#{ product.title }")

          div.product__description
            div.product__custom
              img(src="/assets/img/personalize.jpg" aria-hidden="true" alt="Icone personalize")
              | Personalize

            h1.product__name #{ product.title }
            
            if (product.hightop == true)
              p.product__model
                | Cano alto
            else
              p.product__model 
                | Cano baixo

            p.product__price R$#{ product.price }
            p.product__payment 
              | ou #{ product.installments.number }X de R$#{ product.installments.value } sem juros

            a.btn.btn--primary(title="Comprar #{ product.title }")
              | Comprar

  div.rv-pagination(data-carousel='pagination' data-target='#bestSellers')


