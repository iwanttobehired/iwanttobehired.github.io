//- Filter 
//---------------------------------------
section.filter
  h2.filter__title
    | Chuteiras HyperVenon:  

  
  form.labels-box 
    input.checkbox(type="checkbox" checked data-filter-type='hightop' name="filter" id="highTop")
    label.checkbox__label(for="highTop" title='Filtrar chuteiras com cano alto') 
      | Cano Alto

    input.checkbox(type="checkbox" checked data-filter-type='lowTop' name="filter" value="lowTop" id="lowTop")
    label.checkbox__label(for="lowTop" title='Filtrar chuteiras com cano baixo')
      | Cano baixo

    input.checkbox(type="checkbox" checked data-filter-category='campo' name="filter" value="soccer" id="soccer")
    label.checkbox__label(for="soccer" title='Filtrar chuteiras para campo')
      | Futebol Campo

    input.checkbox(type="checkbox" checked data-filter-category='society' name="filter" value="Society" id="Society")
    label.checkbox__label(for="Society" title='Filtrar chuteiras para society')
      | Futebol Society

  //- Show all
  label.btn.btn--secondary(data-filter='all' title='Mostrar todos os produtos')
    | Mostrar todos


